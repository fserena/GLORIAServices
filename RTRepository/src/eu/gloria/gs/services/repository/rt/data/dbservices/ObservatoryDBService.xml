<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
"http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper
	namespace="eu.gloria.gs.services.repository.rt.data.dbservices.ObservatoryDBService">

	<update id="create">
		CREATE TABLE IF NOT EXISTS
		`observatory` (
		`oid`
		int(11) NOT NULL AUTO_INCREMENT,
		`city` varchar(50) CHARACTER SET
		utf8 NOT NULL,
		`country` varchar(50)
		CHARACTER SET utf8 NOT NULL,
		`ratio` double DEFAULT '0',
		`light_pollution` double DEFAULT '0',
		`name` varchar(50) CHARACTER SET
		utf8 NOT NULL,
		PRIMARY KEY (`oid`)
		)
		ENGINE=InnoDB DEFAULT CHARSET=utf8
	</update>

	<select id="getByName"
		resultType="eu.gloria.gs.services.repository.rt.data.dbservices.ObservatoryEntry">
		SELECT * FROM
		`observatory`
		WHERE
		name=#{name_}
	</select>

	<select id="getById"
		resultType="eu.gloria.gs.services.repository.rt.data.dbservices.ObservatoryEntry">
		SELECT * FROM
		`observatory`
		WHERE
		oid=#{oid_}
	</select>

	<insert id="save"
		parameterType="eu.gloria.gs.services.repository.rt.data.dbservices.ObservatoryEntry">
		INSERT INTO `observatory`
		(name,
		city,
		country)
		VALUE ( #{name}, #{city}, #{country} )
	</insert>

	<delete id="remove" parameterType="string">
		DELETE FROM
		`observatory`
		WHERE
		name=#{name_}
	</delete>

	<select id="getCity" resultType="string">
		SELECT city FROM
		`observatory`
		WHERE
		name=#{name_}
	</select>

	<select id="getCountry" resultType="string">
		SELECT country FROM
		`observatory`
		WHERE
		name=#{name_}
	</select>

	<select id="getVisibilityRatio" resultType="double">
		SELECT ratio FROM
		`observatory`
		WHERE
		name=#{name_}
	</select>

	<select id="getLightPollution" resultType="double">
		SELECT light_pollution
		FROM
		`observatory`
		WHERE
		name=#{name_}
	</select>

	<update id="setCity">
		UPDATE `observatory`
		SET city=
		#{city_}
		WHERE name
		=#{name_}
	</update>

	<update id="setCountry">
		UPDATE `observatory`
		SET country=
		#{country_}
		WHERE
		name
		=#{name_}
	</update>

	<update id="setVisibilityRatio">
		UPDATE `observatory`
		SET ratio=
		#{ratio_}
		WHERE name
		=#{name_}
	</update>

	<update id="setLightPollution">
		UPDATE `observatory`
		SET
		light_pollution= #{light_}
		WHERE name
		=#{name_}
	</update>

	<select id="contains" resultType="boolean">
		SELECT count(*)>0 FROM
		`observatory`
		WHERE
		name=#{name_}
	</select>

	<select id="getAllNames" resultType="string">
		SELECT name
		FROM
		`observatory`
	</select>

</mapper>
