<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
"http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper
	namespace="eu.gloria.gs.services.repository.user.data.dbservices.UserDBService">

	<update id="create">
		CREATE TABLE IF NOT EXISTS `user` (
		`name` varchar(40)
		NOT NULL,
		`password` varchar(45) DEFAULT NULL,
		`roles` varchar(20) NOT
		NULL,
		`date` datetime NOT NULL,
		`language` varchar(45) DEFAULT 'en',
		`ocupation` varchar(100) DEFAULT NULL,
		`alias` varchar(50) NOT NULL,
		PRIMARY KEY (`name`),
		UNIQUE KEY
		`name_UNIQUE`
		(`name`)
		)
		ENGINE=InnoDB
		DEFAULT CHARSET=utf8
	</update>

	<select id="get"
		resultType="eu.gloria.gs.services.repository.user.data.dbservices.UserEntry">
		SELECT * FROM
		`user`
		WHERE
		name=#{name_}
	</select>

	<insert id="save"
		parameterType="eu.gloria.gs.services.repository.user.data.dbservices.UserEntry">
		INSERT INTO `user` (name, alias, password, roles, date)
		VALUE (#{name}, #{alias}, #{password}, #{roles}, NOW())
	</insert>

	<delete id="remove">
		DELETE FROM `user`
		WHERE
		name=#{name_}
	</delete>

	<select id="containsName" resultType="boolean">
		SELECT count(*)>0 FROM
		`user`
		WHERE
		name=#{name_}
	</select>

	<select id="containsAlias" resultType="boolean">
		SELECT count(*)>0 FROM
		`user`
		WHERE alias=#{alias_}
	</select>


	<select id="getPassword" resultType="string">
		SELECT password FROM
		`user`
		WHERE
		name=#{name_}
	</select>

	<update id="setPassword">
		UPDATE `user`
		SET password=
		#{password_}
		WHERE name
		=#{name_}
	</update>

	<select id="getDate" resultType="date">
		SELECT date FROM
		`user`
		WHERE
		name=#{name_}
	</select>

	<select id="getLanguage" resultType="string">
		SELECT language FROM
		`user`
		WHERE
		name=#{name_}
	</select>

	<update id="setLanguage">
		UPDATE `user`
		SET language=
		#{language_}
		WHERE name
		=#{name_}
	</update>

	<select id="getOcupation" resultType="string">
		SELECT ocupation FROM
		`user`
		WHERE
		name=#{name_}
	</select>

	<update id="setOcupation">
		UPDATE `user`
		SET ocupation=
		#{ocupation_}
		WHERE name
		=#{name_}
	</update>

	<select id="getRoles" resultType="string">
		SELECT roles FROM
		`user`
		WHERE
		name=#{name_}
	</select>

	<update id="setRoles">
		UPDATE `user`
		SET roles= #{roles_}
		WHERE name
		=#{name_}
	</update>

</mapper>
