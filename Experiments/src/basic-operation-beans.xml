			<list>
				<value>op1-name</value>
				<value>op2-name</value>
				<value>op3-name</value>
				<value>op4-name</value>
			</list>
		</property>
		<property name="parameterTypes">
			<list>
				<ref bean="pointer"></ref>
				<ref bean="pointer"></ref>
				<ref bean="pointer"></ref>
				<ref bean="pointer"></ref>
			</list>
		</property>
		<property name="behaviour">
			<map>
				<entry key="eu.gloria.gs.services.experiment.operations.Sequence">
					<list>
						<value>arg0</value>
						<value>arg1</value>
						<value>arg2</value>
						<value>arg3</value>
					</list>
				</entry>
			</map>
		</property>
	</bean>

	<bean id="Sequence5" parent="basic-operation">
		<property name="description" value="Executes a sequence of other five operations">
		</property>
		<property name="parameterNames">
			<list>
				<value>op1-name</value>
				<value>op2-name</value>
				<value>op3-name</value>
				<value>op4-name</value>
				<value>op5-name</value>
			</list>
		</property>
		<property name="parameterTypes">
			<list>
				<ref bean="pointer"></ref>
				<ref bean="pointer"></ref>
				<ref bean="pointer"></ref>
				<ref bean="pointer"></ref>
				<ref bean="pointer"></ref>
			</list>
		</property>
		<property name="behaviour">
			<map>
				<entry key="eu.gloria.gs.services.experiment.operations.Sequence">
					<list>
						<value>arg0</value>
						<value>arg1</value>
						<value>arg2</value>
						<value>arg3</value>
						<value>arg4</value>
					</list>
				</entry>
			</map>
		</property>
	</bean>

	<bean id="Sequence6" parent="basic-operation">
		<property name="description" value="Executes a sequence of other six operations">
		</property>
		<property name="parameterNames">
			<list>
				<value>op1-name</value>
				<value>op2-name</value>
				<value>op3-name</value>
				<value>op4-name</value>
				<value>op5-name</value>
				<value>op5-name</value>
			</list>
		</property>
		<property name="parameterTypes">
			<list>
				<ref bean="pointer"></ref>
				<ref bean="pointer"></ref>
				<ref bean="pointer"></ref>
				<ref bean="pointer"></ref>
				<ref bean="pointer"></ref>
				<ref bean="pointer"></ref>
			</list>
		</property>
		<property name="behaviour">
			<map>
				<entry key="eu.gloria.gs.services.experiment.operations.Sequence">
					<list>
						<value>arg0</value>
						<value>arg1</value>
						<value>arg2</value>
						<value>arg3</value>
						<value>arg4</value>
						<value>arg5</value>
					</list>
				</entry>
			</map>
		</property>
	</bean>

	<bean id="Iteration" parent="basic-operation">
		<property name="description" value="Executes an operation n times">
		</property>
		<property name="parameterNames">
			<list>
				<value>op-name</value>
				<value>current</value>
				<value>n</value>
			</list>
		</property>
		<property name="parameterTypes">
			<list>
				<ref bean="pointer"></ref>
				<ref bean="object"></ref>
				<ref bean="object"></ref>
			</list>
		</property>
		<property name="behaviour">
			<map>
				<entry key="eu.gloria.gs.services.experiment.operations.Iteration">
					<list>
						<value>arg0</value>
						<value>arg1</value>
						<value>arg2</value>
					</list>
				</entry>
			</map>
		</property>
	</bean>
</beans>